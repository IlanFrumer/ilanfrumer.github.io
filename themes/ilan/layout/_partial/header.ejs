<img style="border-radius:10px;float:left;margin-right:20px;border:1px solid #ccc" src="<%- gravatar(config.email,100) %>"/>
<div class="alignleft">
  <h1><a href="<%- config.root %>"><%= config.title %></a></h1>
  <h2><% if (config.subtitle){ %><%= config.subtitle %><% } %></h2>
</div>
<nav id="main-nav" class="alignright">
  <ul>
    <% for (var i in theme.menu){ %>
      <li><a href="<%- theme.menu[i] %>"><%= i %></a></li>
    <% } %>
  </ul>
  <div class="clearfix"></div>
</nav>
<div class="clearfix"></div>